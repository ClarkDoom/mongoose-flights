<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Flight List</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Airline</th>
        <th>Flight Number</th>
        <th>Airport</th>
        <th>Departs</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(flight => { %>
        
        <tr>
          <td>
            <a href="/flights/<%= flight._id %>">Details</a>
          </td>
          <td><%= flight.airline %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.departs %></td>
          <td>
            <form action="/flights/<%= flight._id %>?_method=DELETE" class="delete-form" method="POST">
              <button type="submit">Delete Flight</button>
            </form>
        </td>
        </tr>
      <% }); %> 
    </tbody>
  </table>
</main>


<%- include('../partials/footer') %>